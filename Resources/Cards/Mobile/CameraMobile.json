{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "actions": [
    {
      "type": "Action.Submit",
      "title": "OK",
      "style": "positive"
    },
    {
      "type": "Action.Submit",
      "title": "I don't want to answear",
      "style": "destructive"
    }
  ],
  "body": [
    {
      "type": "TextBlock",
      "text": "Let's decide how important the camera is for you",
      "size": "Medium",
      "weight": "Bolder"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "id": "frequency",
          "items": [
            {
              "type": "TextBlock",
              "text": "You do at least one photo:",
              "wrap": true
            },
            {
              "type": "Input.ChoiceSet",
              "id": "UsedFrequency",
              "spacing": "Small",
              "choices": [
                {
                  "title": "Hourly",
                  "value": "Hourly"
                },
                {
                  "title": "Daily",
                  "value": "Daily"
                },
                {
                  "title": "Weekly",
                  "value": "Weekly"
                },
                {
                  "title": "Monthly",
                  "value": "Monthly"
                }
              ],
              "style": "expanded",
              "value": "Weekly"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "id": "platforms",
          "items": [
            {
              "type": "TextBlock",
              "text": "How would you like your photos to be:"
            },
            {
              "type": "Input.ChoiceSet",
              "id": "Platforms",
              "choices": [
                {
                  "title": "Most unnedited photos",
                  "value": "natural"
                },
                {
                  "title": "Ready for media posting",
                  "value": "beautify"
                }
              ],
              "style": "expanded"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Toggle",
              "title": "Selfie mode is more important for me",
              "value": "false",
              "id": "SelfieMode"
            }
          ]
        }
      ],
      "style": "accent",
      "bleed": true,
      "minHeight": "0px"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "How often do you take pictures at night:"
            }
          ]
        }
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "placeholder": "Placeholder text",
      "choices": [
        {
          "title": "Every day",
          "value": "Daily"
        },
        {
          "title": "Every week",
          "value": "Weekly"
        },
        {
          "title": "Special ocasions",
          "value": "Occasionally"
        }
      ],
      "style": "expanded",
      "id": "NightMode",
      "value": "Occasionally"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Toggle",
              "title": "I often printing out my photos",
              "value": "false",
              "id": "Print"
            }
          ]
        }
      ],
      "style": "accent",
      "bleed": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "ActionSet",
                      "actions": [
                        {
                          "type": "Action.ShowCard",
                          "title": "I'm making frequently recordings",
                          "card": {
                            "type": "AdaptiveCard",
                            "body": [
                              {
                                "type": "Input.ChoiceSet",
                                "choices": [
                                  {
                                    "title": "Running, cycling",
                                    "value": "moving"
                                  },
                                  {
                                    "title": "Vlogging",
                                    "value": "vlog"
                                  },
                                  {
                                    "title": "At parties",
                                    "value": "party"
                                  }
                                ],
                                "isMultiSelect": true,
                                "id": "RecordTypes",
                                "value": "none",
                                "style": "expanded"
                              }
                            ],
                            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
                          },
                          "id": "cameraRecord"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Toggle",
              "title": "You need 4K video mode",
              "value": "false",
              "id": "FourK"
            },
            {
              "type": "TextBlock",
              "text": "Attention, this significantly increases the file size",
              "color": "Attention",
              "size": "Small",
              "weight": "Lighter",
              "spacing": "None"
            }
          ]
        }
      ],
      "style": "accent",
      "bleed": true
    }
  ],
  "type": "AdaptiveCard",
  "version": "1.2"
}