{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "actions": [
    {
      "type": "Action.PostBack"
    }
  ],
  "body": [
    {
      "id": "Prompt",
      "type": "TextBlock",
      "text": "How often it happens to drop your phone?"
    },
    {
      "id": "RetryPrompt",
      "type": "TextBlock",
      "text": "Please choose something"
    },
    {
      "type": "ActionTypes.PostBack",
      "id": "Choices",
      "isMultiSelect": false,
      "style": "expanded",
      "choices": [
        {
          "title": "Daily",
          "value": "ExtraHard"
        },
        {
          "title": "Weekly",
          "value": "Hard"
        },
        {
          "title": "Monthly",
          "value": "Medium"
        },
        {
          "title": "Can't remember",
          "value": "Soft"
        }
      ]
    }
  ],
  "type": "AdaptiveCard",
  "version": "1.2"
}